<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/shape2"
        />

        <ImageButton
            android:id="@+id/but1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            android:background="#728DF3"
            />
        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7-Day Forecasts"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/im1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ser"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Tomorrow "
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/im1"
                app:layout_constraintTop_toTopOf="@id/im1"
                app:layout_constraintBottom_toTopOf="@id/im2"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/num"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/im1"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:layout_constraintBottom_toBottomOf="@id/im1"
                app:layout_constraintVertical_bias="0.5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Thundershowers"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/im1"
                app:layout_constraintTop_toBottomOf="@id/im2"
                app:layout_constraintVertical_bias="0.5"/>
            <ImageView
                android:id="@+id/tr1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_umbrella_24"
                android:layout_marginStart="50dp"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintTop_toBottomOf="@id/im1"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/te3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="50dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintTop_toBottomOf="@id/tr1"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/te4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precipitation"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="40dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintTop_toBottomOf="@id/te3"
                app:layout_constraintStart_toStartOf="parent"
                />
            <ImageView
                android:id="@+id/tr2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_water_drop_24"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintStart_toEndOf="@id/tr1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/im1"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="50dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintTop_toBottomOf="@id/tr2"
                app:layout_constraintStart_toEndOf="@id/te3"
                />
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="40dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintTop_toBottomOf="@id/t2"
                app:layout_constraintStart_toEndOf="@id/te4"
                />
            <ImageView
                android:id="@+id/t5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_wind_power_24"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="0.5"
                android:layout_marginStart="19dp"
                app:layout_constraintStart_toEndOf="@id/tr2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/im1"
                />
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Km/h"
                android:textSize="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="19dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintTop_toBottomOf="@id/t5"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind speed"
                android:textSize="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="19dp"
                android:layout_marginHorizontal="0.5"
                app:layout_constraintTop_toBottomOf="@id/t4"
                app:layout_constraintEnd_toEndOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>